@model ShopManagement.Application.Contracts.ProductCategory.EditProductCategory;


@{
    
}

<!DOCTYPE html>
<html lang="en">
<body>
<div class="container">
    <h3>Edit ProductCategory : @Model.Name</h3>
    <form asp-page="./Edit" asp-page-handler="Edit" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" >
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input class="form-control" id="description" name="description" rows="3" >
        </div>
        <div class="form-group">
            <label for="picture">Picture</label>
            <input type="text" class="form-control" id="picture" name="picture">
        </div>
        <div class="form-group">
            <label for="pictureAlt">PictureAlt</label>
            <input type="text" class="form-control" id="pictureAlt" name="pictureAlt" >
        </div>
        <div class="form-group">
            <label for="pictureTitle">PictureTitle</label>
            <input type="text" class="form-control" id="pictureTitle" name="pictureTitle" >
        </div>
        <div class="form-group">
            <label for="keywords">Keywords</label>
            <input type="text" class="form-control" id="keywords" name="keywords" >
        </div>
        <div class="form-group">
            <label for="metaDescription">MetaDescription</label>
            <input class="form-control" id="metaDescription" name="metaDescription" rows="3" >
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" id="slug" name="slug" >
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id">
        <button type="submit" class="btn btn-success">Create</button>
        <button type="reset" class="btn btn-danger">Reset</button>
        <button type="back" class="btn btn-primary" >Back</button>
    </form>
   
</div>

</body>
</html>