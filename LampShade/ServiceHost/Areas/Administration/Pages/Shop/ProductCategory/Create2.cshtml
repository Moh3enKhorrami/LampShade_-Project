@page
@model ShopManagement.Application.Contracts.ProductCategory.CreateProductCategory
@{
    ViewData["Title"] = "Create Product";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    

    <h1>Create Product</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Slug"></label>
            <input asp-for="@Model.Slug" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Picture"></label>
            <input asp-for="@Model.Picture" class="form-control" />
            <span asp-validation-for="@Model.Picture" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>








</div>
</body>
</html>